---
pageable: true
per_page: 1
---

<div class="content-block content-block-gray-100 text-center">
  <div class="container">
    <h1 class="title">Solidus <span class="text-gray-048">Blog</span></h1>
  </div>
</div>

<div class="blog-index-block content-block">
  <div class="container">
    <% page_articles.each_with_index do |article, i| %>
      <div class="blog-post-preview card" data-aos="fade">
        <div class="card-body">
          <h3 class="title"><%= link_to article.title, article, :class => 'text-gray' %></h3>
          <%= article.summary %>

          <div class="blog-post-author text-gray-048"><%= article.data.author %> Â· <%= article.date.strftime('%b %e, %Y') %></div>
        </div>
      </div>
    <% end %>


    <% if paginate && num_pages > 1%>
      <div class="blog-pagination text-center" data-aos="fade">
        <div class="btn-group" role="group">
          <a class="btn btn-primary <% unless prev_page %>disabled<% end %>" href="<% if prev_page %><%= url_for prev_page %><% else %>#<% end %>">Previous</a>
          <a class="btn btn-primary <% unless next_page %>disabled<% end %>" href="<% if next_page %><%= url_for next_page %><% else %>#<% end %>">Next</a>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= partial "partials/feedback" %>
